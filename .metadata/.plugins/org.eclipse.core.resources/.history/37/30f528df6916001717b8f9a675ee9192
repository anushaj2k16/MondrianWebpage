             var s = document.getElementsByTagName('script')[0];
             s.parentNode.insertBefore(gcse, s);
         });
         
              $("#closebtn").click(function(e){
             e.preventDefault();         
             $("#searchButton").show();
             $("#searchfield").toggle();

         });

      })  
</script>

