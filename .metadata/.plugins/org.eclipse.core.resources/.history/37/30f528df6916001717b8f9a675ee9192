         // When the toggle areas in your navbar are clicked, toggle them
         $("#searchButton").click(function(e){
        	 console.log("search button clicked");
             e.preventDefault();
             $("#searchfield").toggle();
             $("#searchButton").hide();
             $("#search-icon").
             $("div").animate({Right: '10px'});
             
             var cx = '011710055739914606767:xw-wydtowvc';
